<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openintents.dm"
    android:versionCode="1"
    android:versionName="1.0"
  >
  <application android:label="@string/app_name">
    <activity android:name=".DependencyManagerSettings"
        android:label="@string/app_name"
      >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- This activity displays a list of packages that can be installed to
         resolve dependencies. -->
    <activity android:name=".ResolverActivity"
        android:theme="@android:style/Theme.Dialog"
      />

    <!-- This ContentProvider provides information for resolving
         dependencies.
         FIXME document processes
         -->
    <provider android:name=".DependencyResolutionProvider"
        android:authorities="org.openintents.dm"
        android:exported="true"
        android:multiprocess="false"
        android:process="org.openintents.dm.provider"
      />

    <!-- Main DependencyManager service -->
    <service android:name=".DependencyManagerService"
        android:exported="true"
      >
      <intent-filter>
        <!-- These are the interfaces supported by the service, which
             you can bind to. -->
        <action android:name="org.openintents.dm.IDependencyManager" />
      </intent-filter>
    </service>

	<receiver android:name=".PackageInstalledReceiver">
		<intent-filter>
			<action android:name="android.intent.action.PACKAGE_ADDED"/>
			<data android:scheme="package"/>
		</intent-filter>
	</receiver>
  </application>
</manifest>
